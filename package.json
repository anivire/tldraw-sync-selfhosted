{
	"name": "tldraw-sync-selfhosted",
	"description": "Self-hosted backend for tldraw real-time collaborative drawing using Node.js and S3-compatible storage",
	"version": "0.0.0",
	"author": "Community",
	"homepage": "",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
		"dev:server": "ts-node src/server/server.ts",
		"dev:client": "vite --host",
		"build": "tsc && vite build",
		"build:server": "tsc server/server.ts --outDir dist/server --moduleResolution node --esModuleInterop --target ES2020 --module ESNext --skipLibCheck",
		"preview": "vite preview"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.896.0",
		"@tailwindcss/vite": "^4.1.18",
		"@tldraw/sync": "^4.3.1",
		"@tldraw/sync-core": "^4.3.1",
		"@tldraw/tlschema": "^4.3.1",
		"cors": "^2.8.5",
		"dotenv": "^17.2.2",
		"express": "^4.21.2",
		"lodash.throttle": "^4.1.1",
		"mongodb": "^6.12.0",
		"multer": "^1.4.5-lts.1",
		"prettier": "^3.8.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"qrcode": "^1.5.4",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-router-dom": "^6.28.2",
		"tailwindcss": "^4.1.18",
		"tldraw": "^4.3.1",
		"ws": "^8.18.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/lodash.throttle": "^4.1.9",
		"@types/mongodb": "^4.0.6",
		"@types/multer": "^1.4.12",
		"@types/node": "^22.10.1",
		"@types/qrcode": "^1.5.5",
		"@types/react": "^18.3.18",
		"@types/react-dom": "^18.3.5",
		"@types/ws": "^8.5.13",
		"@vitejs/plugin-react-swc": "^3.10.2",
		"concurrently": "^9.1.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3",
		"vite": "^7.0.1"
	}
}
